<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/expandable_image"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:layout_width="40dp"
        android:src="@drawable/ic_man_user"
        app:civ_border_color="@color/colorAccent"
        app:civ_border_width="1dp"/>

    <TextView
        android:id="@+id/expandable_title"
        android:layout_alignBottom="@id/expandable_image"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:maxLines="1"
        android:text="@string/example_text_1"
        android:textSize="20sp"
        android:layout_toRightOf="@id/expandable_image"/>

</RelativeLayout>