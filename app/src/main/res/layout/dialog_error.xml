<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_height="match_parent"
    android:layout_width="300dp"
    android:orientation="vertical"
    app:cardCornerRadius="@dimen/rounded_edge"
    app:cardElevation="5dp"
    app:cardPreventCornerOverlap="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:background="@color/lightGrey"
            android:id="@+id/error_header"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:padding="@dimen/padding_sm"
            android:textColor="@color/text_dark_grey"
            android:textSize="@dimen/xlarge_text"
            android:textStyle="bold"/>

        <LinearLayout
            android:background="@color/white"
            android:gravity="center"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/padding_sm_plus">

            <ImageView
                android:id="@+id/error_image"
                android:layout_height="48dp"
                android:layout_marginBottom="@dimen/margin_xs"
                android:layout_width="48dp"/>

            <TextView
                android:gravity="center_horizontal"
                android:id="@+id/error_body"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_md"
                android:layout_width="match_parent"
                android:padding="@dimen/padding_xs"
                android:textColor="@color/text_dark_grey"
                android:textSize="@dimen/medium_text"
                android:textStyle="bold"/>

        </LinearLayout>

        <Button
            android:background="@drawable/round_edges_grey"
            android:id="@+id/exit"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_xs"
            android:layout_width="match_parent"
            android:text="@string/dialog_ok"
            android:textColor="@color/white"
            android:textStyle="bold"/>


    </LinearLayout>

</android.support.v7.widget.CardView>