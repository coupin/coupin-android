<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:background="@android:color/transparent"
        android:id="@+id/card1"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_sm"
        android:layout_width="match_parent"
        app:cardCornerRadius="@dimen/cardview_custom_radius"
        app:cardElevation="5dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/padding_sm">

                <!--<android.support.v7.widget.CardView-->
                    <!--android:background="@color/black"-->
                    <!--android:layout_gravity="top|start"-->
                    <!--android:layout_height="70dp"-->
                    <!--android:layout_width="70dp"-->
                    <!--app:cardCornerRadius="@dimen/cardview_custom_radius"-->
                    <!--app:cardElevation="5dp"-->
                    <!--app:contentPadding="3dp"-->
                    <!--app:cardUseCompatPadding="true">-->

                    <ImageView
                        android:background="@drawable/round_edges_corner_grey"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/slide1"/>

                <!--</android.support.v7.widget.CardView>-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/hot_title_1"
                        android:layout_alignParentBottom="true"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_xs"
                        android:layout_marginLeft="@dimen/margin_sm"
                        android:layout_marginStart="@dimen/margin_sm"
                        android:layout_width="wrap_content"
                        android:text="Yakubu's Tea"
                        android:textAllCaps="true"
                        android:textColor="@color/text_dark_grey"
                        android:textSize="@dimen/xlarge_text"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/hot_address_1"
                        android:layout_alignParentBottom="true"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_xs"
                        android:layout_marginLeft="@dimen/margin_sm"
                        android:layout_marginStart="@dimen/margin_sm"
                        android:layout_width="wrap_content"
                        android:text="@string/example_address_1"
                        android:textColor="@color/text_dark_grey"
                        android:textSize="@dimen/medium_text"/>

                </LinearLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/margin_sm"
                android:paddingLeft="@dimen/margin_sm"
                android:paddingRight="@dimen/margin_sm">

                <ImageView
                    android:id="@+id/hot_visited_1"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_height="24dp"
                    android:layout_marginBottom="@dimen/margin_xs"
                    android:layout_marginEnd="@dimen/margin_xs"
                    android:layout_marginLeft="@dimen/margin_sm"
                    android:layout_marginRight="@dimen/margin_xs"
                    android:layout_marginStart="@dimen/margin_sm"
                    android:layout_width="wrap_content"
                    android:src="@drawable/ic_steps"
                    android:tint="@color/black"/>

                <TextView
                    android:ellipsize="marquee"
                    android:id="@+id/hot_rewards_1"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin_lg"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_toEndOf="@id/hot_visited_1"
                    android:layout_toRightOf="@id/hot_visited_1"
                    android:maxLines="1"
                    android:text="@string/example_reward"
                    android:textAllCaps="true"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/medium_text"
                    android:textStyle="bold"/>

                <ImageView
                    android:id="@+id/hot_fav_1"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_height="24dp"
                    android:layout_marginBottom="@dimen/margin_xs"
                    android:layout_marginEnd="@dimen/margin_sm"
                    android:layout_marginRight="@dimen/margin_sm"
                    android:layout_width="wrap_content"
                    android:src="@drawable/ic_star"
                    android:tint="@color/black"/>

            </RelativeLayout>

        </LinearLayout>



    </android.support.v7.widget.CardView>

