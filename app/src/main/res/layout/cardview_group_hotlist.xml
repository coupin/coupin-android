<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:id="@+id/hotlist_group"
              android:orientation="vertical"
              android:paddingEnd="@dimen/margin_sm"
              android:paddingLeft="@dimen/margin_sm"
              android:paddingRight="@dimen/margin_sm"
              android:paddingStart="@dimen/margin_sm"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:visibility="gone">

    <android.support.v7.widget.CardView
        android:background="@android:color/transparent"
        android:id="@+id/card1"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_sm"
        android:layout_width="match_parent"
        app:cardCornerRadius="@dimen/cardview_custom_radius"
        app:cardElevation="5dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/padding_sm">

                <android.support.v7.widget.CardView
                    android:background="@color/black"
                    android:layout_gravity="top|start"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    app:cardCornerRadius="@dimen/cardview_custom_radius"
                    app:cardElevation="5dp"
                    app:cardUseCompatPadding="true">

                    <com.makeramen.roundedimageview.RoundedImageView
                        android:id="@+id/hot_logo_1"
                        android:layout_height="50dp"
                        android:layout_width="50dp"
                        android:src="@drawable/slide1"
                        app:riv_border_color="@color/white"
                        app:riv_border_width="2dp"
                        app:riv_corner_radius="3dp"/>

                </android.support.v7.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/hot_title_1"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin_sm"
                        android:layout_width="wrap_content"
                        android:textAllCaps="true"
                        android:textColor="@color/text_dark_grey"
                        android:textSize="@dimen/xlarge_text"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/hot_address_1"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_xs"
                        android:layout_marginLeft="@dimen/margin_sm"
                        android:layout_marginStart="@dimen/margin_sm"
                        android:layout_width="wrap_content"
                        android:text="@string/example_address_1"
                        android:textColor="@color/text_dark_grey"
                        android:textSize="@dimen/medium_text"/>

                </LinearLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/margin_sm"
                android:paddingLeft="@dimen/margin_sm"
                android:paddingRight="@dimen/margin_sm">

                <ImageView
                    android:id="@+id/hot_visited_1"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_height="24dp"
                    android:layout_marginBottom="@dimen/margin_xs"
                    android:layout_marginEnd="@dimen/margin_xs"
                    android:layout_marginLeft="@dimen/margin_sm"
                    android:layout_marginRight="@dimen/margin_xs"
                    android:layout_marginStart="@dimen/margin_sm"
                    android:layout_width="wrap_content"
                    android:src="@drawable/ic_steps"
                    android:tint="@color/black"
                    android:visibility="gone"/>

                <TextView
                    android:ellipsize="marquee"
                    android:gravity="center_vertical"
                    android:id="@+id/hot_rewards_1"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/margin_lg"
                    android:layout_marginLeft="@dimen/margin_lg"
                    android:layout_marginRight="@dimen/margin_lg"
                    android:layout_marginStart="@dimen/margin_lg"
                    android:layout_height="24dp"
                    android:layout_width="wrap_content"
                    android:layout_toEndOf="@id/hot_visited_1"
                    android:layout_toRightOf="@id/hot_visited_1"
                    android:singleLine="true"
                    android:text="@string/example_reward"
                    android:textAllCaps="true"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/medium_text"
                    android:textStyle="bold"/>

                <ImageView
                    android:id="@+id/hot_fav_1"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_height="24dp"
                    android:layout_marginBottom="@dimen/margin_xs"
                    android:layout_marginEnd="@dimen/margin_sm"
                    android:layout_marginRight="@dimen/margin_sm"
                    android:layout_width="wrap_content"
                    android:src="@drawable/ic_star"
                    android:tint="@color/black"
                    android:visibility="gone"/>

            </RelativeLayout>

        </LinearLayout>



    </android.support.v7.widget.CardView>

