<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white"
    android:layout_height="match_parent"
    android:layout_width="400dp"
    android:orientation="vertical"
    android:padding="@dimen/padding_md">

    <TextView
        android:id="@+id/dialog_reward_code"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_width="match_parent"
        android:text="kj23hkj4"
        android:textSize="20sp"
        android:textColor="@color/colorAccent"
        android:textStyle="bold"/>

    <LinearLayout
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_height="wrap_content"
            android:layout_marginRight="1dp"
            android:layout_width="wrap_content"
            android:text="&quot;"/>

        <TextView
            android:id="@+id/dialog_reward_detail"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/example_text_1"
            android:textStyle="italic"/>

        <TextView
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:layout_width="wrap_content"
            android:text="&quot;"/>

    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_width="wrap_content"
            android:text="By"/>

        <TextView
            android:id="@+id/dialog_reward_merchant_name"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_width="wrap_content"
            android:text="@string/example_text_1"/>

    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_width="wrap_content"
            android:text="At"/>

        <TextView
            android:id="@+id/dialog_reward_merchant_address"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_width="wrap_content"
            android:maxLines="2"
            android:text="@string/example_text_1"/>

    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Expires on"/>

        <TextView
            android:id="@+id/dialog_reward_expiration_date"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/example_text_1"/>

    </LinearLayout>

    <View
        android:background="@color/colorPrimary"
        android:layout_gravity="center_horizontal"
        android:layout_height="1dp"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_width="200dp"/>

    <Button
        android:background="@android:color/transparent"
        android:drawableEnd="@android:drawable/ic_menu_send"
        android:drawableRight="@android:drawable/ic_menu_send"
        android:layout_gravity="center_horizontal"
        android:id="@+id/btn_reward_dialog_go"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="@string/btn_navigate"
        android:textColor="@color/colorAccent"/>


</LinearLayout>