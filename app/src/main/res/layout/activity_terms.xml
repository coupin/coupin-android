<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activities.TermsActivity">

    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical">

        <WebView
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:id="@+id/myWebView"/>

        <RelativeLayout
            android:background="@color/white"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_sm"
            android:layout_width="match_parent"
            android:padding="@dimen/padding_sm"
            android:visibility="gone">

            <ImageView
                android:id="@+id/terms_back"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_height="@dimen/icon_sm"
                android:layout_width="@dimen/icon_sm"
                android:src="@drawable/ic_back"
                app:tint="@color/text_color_1"/>

            <TextView
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/terms_of_service_title"
                android:textColor="@color/text_color_1"
                android:textSize="@dimen/xxlarge_text"
                android:textStyle="bold"/>

        </RelativeLayout>

    </LinearLayout>

</ScrollView>
