<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.kibou.abisoyeoke_lawal.coupinapp.HotActivity">

    <RelativeLayout
        android:background="@color/red"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:padding="@dimen/padding_sm">

        <ImageView
            android:id="@+id/hot_back"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_height="@dimen/icon_sm"
            android:layout_width="@dimen/icon_sm"
            android:src="@drawable/ic_back"/>

        <TextView
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/coupins"
            android:textColor="@color/white"
            android:textSize="@dimen/xxlarge_text"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/hot_filter"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_height="@dimen/icon_sm"
            android:layout_width="@dimen/icon_sm"
            android:src="@drawable/ic_filter_lg"
            android:tint="@color/white"/>

    </RelativeLayout>


    <FrameLayout
        android:background="@color/text_med_grey"
        android:layout_height="200dp"
        android:layout_width="match_parent">

    </FrameLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/hot_recyclerview"
        android:layout_height="match_parent"
        android:layout_width="match_parent"/>

</LinearLayout>
